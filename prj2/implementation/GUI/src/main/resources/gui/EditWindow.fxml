   <children>
      <HBox prefHeight="100.0" prefWidth="700.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="240.0">
               <children>
                  <Label fx:id="editdetailslabel" prefHeight="48.0" prefWidth="192.0" text="Edit desired details">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </Label>
                  <ImageView fx:id="usericon" fitHeight="49.0" fitWidth="94.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/account-30-64.png" />
                     </image>
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </ImageView>
               </children>
            </HBox>
         </children>
      </HBox>
      <VBox layoutY="48.0" prefHeight="355.0" prefWidth="274.0">
         <children>
            <TextField fx:id="firstname" onMouseClicked="#openEditDialog" promptText="First Name">
               <VBox.margin>
                  <Insets left="20.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="lastname" layoutX="10.0" layoutY="30.0" onMouseClicked="#openEditDialog" promptText="Last Name">
               <VBox.margin>
                  <Insets left="20.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="username" layoutX="10.0" layoutY="76.0" onMouseClicked="#openEditDialog" promptText="Username">
               <VBox.margin>
                  <Insets left="20.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="position" layoutX="10.0" layoutY="122.0" onMouseClicked="#openEditDialog" promptText="Position">
               <VBox.margin>
                  <Insets left="20.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <CheckBox fx:id="deleteAccountcheckbox" mnemonicParsing="false" onAction="#deleteAccount" text="Delete account?">
                     <HBox.margin>
                        <Insets left="20.0" top="30.0" />
                     </HBox.margin>
                  </CheckBox>
               </children>
            </HBox>
            <HBox prefHeight="44.0" prefWidth="274.0" />
            <Label fx:id="errorLabel" prefHeight="17.0" prefWidth="272.0" textFill="#e81111" />
         </children>
      </VBox>
      <HBox layoutX="1.0" layoutY="301.0" prefHeight="64.0" prefWidth="300.0">
         <children>
            <Button fx:id="saveChangesButton" alignment="TOP_CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#saveChanges" text="Save changes">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
